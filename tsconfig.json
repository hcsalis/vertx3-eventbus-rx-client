{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "stripInternal": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015", "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
